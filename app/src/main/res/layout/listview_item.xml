<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip" >

    <TextView
        android:id="@+id/rowItem_scoreImage"
        android:layout_width="10dp"
        android:layout_height="44dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/rowItem_Alias"
        android:layout_marginRight="6dp"
        android:background="#C8C8C8" />

    <TextView
        android:id="@+id/rowItem_Alias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rowItem_favIcon"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/rowItem_favIcon"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/rowItem_favIcon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:src="@drawable/favicon" />

    <ImageView
        android:id="@+id/rowItem_currentStatusSymbol"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/rowItem_favIcon"
        android:layout_alignLeft="@+id/rowItem_Alias"
        android:contentDescription="@null"
        android:src="@drawable/questionmark" />

    <TextView
        android:id="@+id/rowItem_currentStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rowItem_currentStatusSymbol"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/rowItem_currentStatusSymbol"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>